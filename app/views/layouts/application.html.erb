<!DOCTYPE html>
<html>
  <head>
    <title>helmet</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg <%= admin_signed_in? ? 'navbar-dark bg-dark' : 'navbar-light bg-light' %>">
      <div class="container">
        <%= link_to 'helmet', root_path, class: 'navbar-brand logo' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">

          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Home", root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "My page", mypage_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Post list", posts_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "New post", new_post_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Group", groups_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          <% elsif admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "Dashboard", admin_dashboards_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Post list", admin_posts_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Log out', destroy_admin_session_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Home", root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
            </li>
          <% end %>


          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
