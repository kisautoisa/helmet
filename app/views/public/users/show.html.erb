<div class="container py-5">
  <div class="row">
    <div class="col-12 col-lg-10 mx-auto">
    <h2>プロフィール</h2>

    <h4>ユーザー名</h4>
    <p><%= @user.name %></p>

    <h4>参加中のグループ</h4>
    <ul>
      <% @user.group_users.each do |gu| %>
        <li>
          <%= link_to gu.group.name, group_path(gu.group) %>
        </li>
      <% end %>
    </ul>

    </div>
  </div>
</div>